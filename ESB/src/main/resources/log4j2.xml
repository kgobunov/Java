<Configuration strict="true">
	<Appenders>
			<Appender type="File" name="fileDefault" fileName="Esb_default.log">
				<Layout type="PatternLayout">
					<Pattern>%d{dd MM yyyy HH:mm:ss,SSS} [%t] %-5p %c{2}:%L - %m%n"</Pattern>
				</Layout>
			</Appender>
			<Appender type="File" name="Services" fileName="Services.log">
				<Layout type="PatternLayout">
					<Pattern>%d{dd MM yyyy HH:mm:ss,SSS} [%t] %-5p %c{2}:%L - %m%n"</Pattern>
				</Layout>
			</Appender>
	</Appenders>	
	<Loggers>
		<Logger name="listeners.ServicesListener" level="debug" additivity="false">
			<AppenderRef ref="Services"/>
		</Logger>
		<Root level="trace">
			<AppenderRef ref="fileDefault"/>
		</Root>
	</Loggers>
</Configuration>